{% set aboutUrl = '/about/' %}

<header class="page-header">
  <nav class="page-header__nav">
    <ul class="page-header__list">
      <li class="page-header__list-item">
        <a
          href="/"
          class="page-header__link {% if page.url === paths.home %}page-header__link--active{% endif %}"
          tabindex="{% if page.url === paths.home %}-1{% elif 0 %}{% endif %}"
          >Home</a
        >
      </li>
      <li class="page-header__list-item">
        <a href="#" class="page-header__link">Blog</a>
      </li>
      <li class="page-header__list-item">
        <a href="#" class="page-header__link">Work</a>
      </li>
      <li class="page-header__list-item">
        <a
          href="/about/"
          class="page-header__link {% if page.url === paths.about %}page-header__link--active{% endif %}"
          tabindex="{% if page.url === paths.about %}-1{% elif 0 %}{% endif %}"
          >About</a
        >
      </li>
    </ul>
  </nav>
  <button class="page-header__toggle-btn theme-toggler">
    <svg
      viewbox="0 0 14 14"
      width="25"
      height="25"
      aria-hidden="true"
      focusable="false"
      class="theme-toggler__sun"
    >
      <g fill-rule="evenodd">
        <circle cx="7" cy="7" r="3" />
        <circle cx="7" cy="1" r="1" />
        <circle cx="11" cy="3" r="1" />
        <circle cx="3" cy="3" r="1" />
        <circle cx="13" cy="7" r="1" />
        <circle cx="11" cy="11" r="1" />
        <circle cx="7" cy="13" r="1" />
        <circle cx="3" cy="11" r="1" />
        <circle cx="1" cy="7" r="1" />
      </g>
    </svg>
    <svg
      class="theme-toggler__crescent"
      viewbox="0 0 12 11"
      width="25"
      height="25"
      aria-hidden="true"
      focusable="false"
    >
      <path
        d="M3 1.437c0 2.942 2.579 5.328 5.76 5.328a6.12 6.12 0 0 0 2.548-.549c-.679 2.245-2.906 3.892-5.549 3.892C2.58 10.108 0 7.723 0 4.78 0 2.683 1.309.87 3.211 0 3.074.458 3 .94 3 1.437z"
        fill-rule="evenodd"
      />
    </svg>
  </button>
</header>
