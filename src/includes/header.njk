{% set localeUrl = '/' + locale + '/' %}
<header class="page-header">
  <nav class="page-header__nav">
    <ul class="page-header__list">
      <li class="page-header__list-item">
        <a
          href="/{{ locale }}"
          class="page-header__link {% if page.url ===  localeUrl %}page-header__link--active{% endif %}"
          tabindex="{% if page.url === localeUrl %}-1{% elif 0 %}{% endif %}"
          >Home</a
        >
      </li>
      <li class="page-header__list-item">
        <a
          href="/blog/"
          class="page-header__link {% if page.url === paths.blog %}page-header__link--active{% endif %}"
          >Blog</a
        >
      </li>
      <li class="page-header__list-item">
        <a href="#" class="page-header__link">Work</a>
      </li>
      <li class="page-header__list-item">
        <a
          href="/{{ locale}}/about/"
          class="page-header__link {% if page.url === paths.about %}page-header__link--active{% endif %}"
          tabindex="{% if page.url === paths.about %}-1{% elif 0 %}{% endif %}"
          >About</a
        >
      </li>
    </ul>
  </nav>
  {% set translatedUrl, translationLabel = '' %}
  {% for lang in site.languages %}
    {% if locale != lang.code %}
      {% for item in collections.all %}
          {% if item.data.translationKey == translationKey and item.data.locale != locale  %}
            {% set translatedUrl = item.url %}
            {% set translationLabel = lang.label %}
          {% endif %}
       {% endfor %}
    {% endif %}
  {% endfor %}
  <div class="page-header__tools">
    <a class="page-header__link" href={{ translatedUrl }}>{{ translationLabel }}</a>
    <button class="page-header__toggle-btn theme-toggler">
      <svg
        width="20"
        height="20"
        viewbox="0 0 14 14"
        class="theme-toggler__icon theme-toggler__icon--sun"
        aria-hidden="true"
        focusable="false"
        fill="var(--color-nav-text)"
      >
        <g fill-rule="evenodd">
          <circle class="main-circle" cx="7" cy="7" r="3" />
          <circle class="top-circle" cx="7" cy="1" r="1" />
          <circle class="top-circle" cx="11" cy="3" r="1" />
          <circle class="top-circle" cx="3" cy="3" r="1" />
          <circle class="top-circle" cx="13" cy="7" r="1" />
          <circle class="bottom-circle" cx="11" cy="11" r="1" />
          <circle class="bottom-circle" cx="7" cy="13" r="1" />
          <circle class="bottom-circle" cx="3" cy="11" r="1" />
          <circle class="bottom-circle" cx="1" cy="7" r="1" />
        </g>
      </svg>
      <svg
        width="20"
        height="20"
        viewbox="0 0 11 11"
        class="theme-toggler__icon theme-toggler__icon--crescent"
        aria-hidden="true"
        focusable="false"
        fill="var(--color-nav-text)"
      >
        <path
          d="M569 34.437c0 2.942 2.579 5.328 5.76 5.328a6.12 6.12 0 002.548-.549c-.679 2.245-2.906 3.892-5.549 3.892-3.18 0-5.759-2.385-5.759-5.328 0-2.097 1.309-3.91 3.211-4.78-.137.458-.211.94-.211 1.437z"
          transform="translate(-566 -33)"
          fill-rule="evenodd"
        />
      </svg>
    </button>
  </div>
</header>
