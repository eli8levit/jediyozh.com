{% set homeUrl = '/' + locale + '/' %}
{% set aboutUrl = homeUrl + paths.about + '/' %}
{% set blogUrl = homeUrl + paths.blog + '/' %}
{% set workUrl = homeUrl + paths.work + '/' %}

<header class="page-header">
  <nav class="page-header__nav">
    <ul class="page-header__list">
      <li class="page-header__list-item">
        <a class="page-header__link" {% if homeUrl != page.url %} href="{{ homeUrl }}" {% endif %}>
          {{ site[locale].header.home }}
        </a>
      </li>
      <li class="page-header__list-item">
        <a class="page-header__link" {% if blogUrl != page.url %} href="{{ blogUrl }}" {% endif %}>{{ site[locale].header.blog }}</a>
      </li>
      <li class="page-header__list-item">
        <a class="page-header__link" {% if workUrl != page.url %} href="{{ workUrl }}" {% endif %}>{{ site[locale].header.work }}</a>
      </li>
      <li class="page-header__list-item">
        <a class="page-header__link" {% if aboutUrl != page.url %} href="{{ aboutUrl }}" {% endif %}>
          {{ site[locale].header.about }}
        </a>
      </li>
    </ul>
  </nav>
  {% set translatedUrl,
  translationLabel = '' %}
  {% for lang in site.languages %}
    {% if locale != lang.code %}
      {% for item in collections.all %}
        {% if item.data.translationKey == translationKey and item.data.locale != locale %}
          {% set translatedUrl = item.url %}
          {% set translationLabel = lang.label %}
        {% endif %}
      {% endfor %}
    {% endif %}
  {% endfor %}
  <a class="page-header__link page-header__link--lang" href={{ translatedUrl }}>{{ translationLabel }}</a>
  <button class="page-header__toggle-btn theme-toggler" aria-label="Toggle Theme" type="button">
    <svg class="theme-toggler__icon theme-toggler__icon--sun" height="18" width="18" viewbox="0 0 14 14" aria-hidden="true" focusable="false" fill="var(--color-text-header)">
      <g fill-rule="evenodd">
        <circle cx="7" cy="7" r="3"/>
        <circle cx="7" cy="1" r="1"/>
        <circle cx="11" cy="3" r="1"/>
        <circle cx="3" cy="3" r="1"/>
        <circle cx="13" cy="7" r="1"/>
        <circle cx="11" cy="11" r="1"/>
        <circle cx="7" cy="13" r="1"/>
        <circle cx="3" cy="11" r="1"/>
        <circle cx="1" cy="7" r="1"/>
      </g>
    </svg>
    <svg class="theme-toggler__icon theme-toggler__icon--crescent" height="16" width="16" viewbox="0 0 11 11" aria-hidden="true" focusable="false" fill="var(--color-text-header)">
      <path d="M569 34.437c0 2.942 2.579 5.328 5.76 5.328a6.12 6.12 0 002.548-.549c-.679 2.245-2.906 3.892-5.549 3.892-3.18 0-5.759-2.385-5.759-5.328 0-2.097 1.309-3.91 3.211-4.78-.137.458-.211.94-.211 1.437z" transform="translate(-566 -33)" fill-rule="evenodd"/>
    </svg>
  </button>
</header>
