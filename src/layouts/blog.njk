---
translationKey: 'blog'
---

{% extends "./page.njk" %}

{% block styling %}
  {% include "../styles/blocks/blog.css" %}
{% endblock %}

{% block content %}
  <main class="blog-page">
    <section class="blog-page__post-list">
      <h1 class="visually-hidden">Blog</h1>

      {% set posts = collections[locale + "Posts"] %}

      {% if posts | length %}

        {% for post in posts | reverseArticles%}

          <a class="blog-page__post-link" href="{{post.url}}">
            <article class="blog-page__card">
              <h2 class="blog-page__card-heading">
                {{post.data.title}}
              </h2>
              <p class="blog-page__card-info">
                {{ post.data.info }}
              </p>
              <footer>
                <time class="blog-page__card-date" datetime="{{ date | isoDate }}" itemprop="datePublished">{{ post.data.date | formatDate(locale) }}</time>
                <span class="blog-page__card-tag">#{{ post.data.tag }}</span>
              </footer>
            </article>
          </a>

        {% endfor %}

      {% endif %}

    </section>
  </main>
{% endblock %}
