---
translationKey: 'blog'
---

{% extends "./page.njk" %}
{% set metaTitle = site[locale].headerBlog %}

{% block styling %}
  {% include "../styles/blocks/blog.css" %}
{% endblock %}

{% block content %}
  <main class="blog-page">
    <section class="blog-page__post-list">
      <h1 class="visually-hidden">Blog</h1>

      {% set posts = collections[locale + "Posts"] %}
      {% for post in posts %}

        <a class="blog-page__post-link" href="{{post.url}}">
          <article class="blog-page__card">
            <h2 class="blog-page__card-heading">
              {{post.data.title}}
            </h2>
            <p class="blog-page__card-info">
              {{ post.data.info }}
            </p>
            <footer>
              <span class="blog-page__card-date">19th April 2020</span>
              <span class="blog-page__card-tag">#Life</span>
            </footer>
          </article>
        </a>

      {% endfor %}

    </section>
  </main>
{% endblock %}
