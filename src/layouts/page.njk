<!DOCTYPE html>
<html lang="{{ locale }}" prefix="og: http://ogp.me/ns#">
  <head>
    <meta charset="utf-8"/>

    {% set title = title %}
    {% if title == undefined %}
      {% set title = site[locale].pageTitles[translationKey] %}
    {% endif %}

    <title>{{ title }}</title>

    {% set css %}
    {% include '../styles/reset.css' %}
    {% include '../styles/font.css' %}
    {% include '../styles/properties.css' %}
    {% include '../styles/blocks/common.css' %}
    {% include '../styles/base.css' %}
    {% include '../styles/blocks/header.css' %}
    {% include '../styles/blocks/footer.css' %}
    {% include '../styles/blocks/theme-toogler.css' %}
    {% endset %}

    {% set socialTitle = metaTitle %}
    {% if metaTitle == undefined %}
      {% set socialTitle = site[locale].defaultMeta.title %}
    {% endif %}

    {% set socialDescription = metaDescription %}
    {% if metaDescription == undefined %}
      {% set socialDescription = site[locale].defaultMeta.description %}
    {% endif %}

    <!-- Primary Meta Tags -->
    <meta name="title" content="{{ socialTitle }}">
    <meta name="description" content="{{ socialDescription }}">
    <meta name="viewport" content="width=device-width, initial-scale=1"/>

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{ 'https://dev.jediyozh.com/' + locale }}"/>
    <meta property="og:title" content="{{ socialTitle }}">
    <meta property="og:description" content="{{ socialDescription }}">
    <meta property="og:image" content="https://dev.jediyozh.com/social.png">
    <meta property="og:locale" content="{{ site[locale].langCode }}"/>

    <!-- Twitter -->
    <meta property="twitter:url" content="{{ 'https://dev.jediyozh.com/' + locale }}">
    <meta property="twitter:title" content="{{ socialTitle }}">
    <meta property="twitter:description" content="{{ socialDescription }}">
    <meta property="twitter:image" content="https://dev.jediyozh.com/social.png">

    <link rel="apple-touch-icon" sizes="180x180" href="/images/icons/apple-touch-icon.png"/>
    <link rel="icon" type="image/png" sizes="32x32" href="/images/icons/favicon-32x32.png"/>
    <link rel="icon" type="image/png" sizes="16x16" href="/images/icons/favicon-16x16.png"/>
    <link rel="manifest" href="/site.webmanifest"/>
    <link rel="mask-icon" href="/images/icons/safari-pinned-tab.svg" color="#e61422"/>
    <meta name="msapplication-TileColor" content="#ffffff"/>
    <meta name="theme-color" content="#ffffff"/>

    {% set js %}
    {% include "../scripts/index.js" %}
    {% endset %}

    <script>
      {{ js | safe }}
    </script>

    <style>
      {{css | safe}}
      {% block styling %}
      {% endblock %}
    </style>

  </head>

  <body>
    {% include 'header.njk' %}
    {% block content %}{% endblock %}
    {% include 'footer.njk' %}
  </body>
</html>
