{% extends "./page.njk" %}

{% set metaTitle = site[locale].aboutTitle %}

{% block styling %}
  {% include "../styles/blocks/post.css" %}
{% endblock %}

{% block content %}
  <main class="post-page">
    <div class="post-page__article">
      <figure class="post-page__photo-container">
        <img class="post-page__photo" src="{{ imagePath }}" width="950px" height="340px"/>
        <figcaption class="post-page__photo-description">{{ photoDescription }}</figcaption>
      </figure>
      <h1 class="post-page__title">{{ title }}</h1>
      <div class="post-page__meta-data">
        <time class="post-page__time" datetime="{{ date | isoDate }}" itemprop="datePublished">{{ date | ruDate }}</time>
        <span class="post-page__tag">#{{ tag }}</span>
      </div>
      {{ content | safe}}
    </div>
  </main>
{% endblock %}
